#include <stdio.h>
#include <stdlib.h> /* 亂數相關函數 */
#include <time.h> 

void RANDOM(Store *HEAD){
	int count=0;
	srand( time(NULL) );
	int x = rand();
	for (p = HEAD; p != NULL; p = p->next) count++;
	x=x%count;
	p = HEAD;
	for (int i=0; i<x; i++)
		p = p->next;
	printf("%s %s %lf %lf %f %d %d %lf %d\n",p->name,p->phonenumber,p->longitude,p->latitude,p->rating,p->time[0],p->time[1],p->distance,p->price);
}

void RANDOMTYPE (Store *HEAD,int TYPE){
	int count=0,typenumber[100],i=0;
	srand( time(NULL) );
	int x = rand();
	for (p = HEAD; p != NULL; p = p->next) {
		count++;
		if(p->type== TYPE){
			typenumber[i]=count;
			i++;
		}
	}
	
	x=x%(i-1);
	p = HEAD;
	for (int i=0; i<typenumber[x]; i++)
		p = p->next;
	printf("%s %s %lf %lf %f %d %d %lf %d\n",p->name,p->phonenumber,p->longitude,p->latitude,p->rating,p->time[0],p->time[1],p->distance,p->price);
}
